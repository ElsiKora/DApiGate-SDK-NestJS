{
	"compilerOptions": {
		"baseUrl": "./",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"module": "commonjs",
		"outDir": "./dist",
		"removeComments": true,
		"sourceMap": true,
		"target": "ESNext"
	},
	"exclude": ["node_modules", "dist"],
	"filesGlob": ["./model/*.ts", "./api/*.ts"]
}
